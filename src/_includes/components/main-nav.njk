{% set currentUrl %}{{ page.url }}{% endset %}
<nav>
    <ul role="list">
{%- for item in nav %}
    {%- if currentUrl === item.url %}
        <li class="current{%- if item.class -%} {{ item.class }}{%- endif -%}"><span>{{ item.name }}</span></li>
    {%- else %}
        <li class="{% if item.url in currentUrl %}current{% endif %}{%- if item.class %} {{ item.class }}{%- endif -%}">
            <a aria-current="page" href="{{ item.url }}">{{ item.name }}</a>
        </li>
    {%- endif %}
{%- endfor %}
    </ul>
</nav>
